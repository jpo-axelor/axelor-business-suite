<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.0.xsd">

    <module name="timecard" package="com.axelor.apps.timecard.db"/>

    <entity name="Planning">

        <many-to-one name="project" title="Site" ref="com.axelor.apps.project.db.Project"/>
        <many-to-one name="employee" title="Employee" ref="com.axelor.apps.hr.db.Employee"/>
        <date name="startDate" title="Start date"/>
        <date name="endDate" title="End date"/>
        <decimal name="monthlyHours" title="Monthly hours" readonly="true"/>

    </entity>

</domain-models>
