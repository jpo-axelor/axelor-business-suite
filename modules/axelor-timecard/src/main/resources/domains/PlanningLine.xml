<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.0.xsd">

    <module name="timecard" package="com.axelor.apps.timecard.db"/>

    <entity name="PlanningLine">

        <many-to-one name="employee" title="Employee" ref="com.axelor.apps.hr.db.Employee" required="true"/>
        <many-to-one name="project" title="Project" ref="com.axelor.apps.project.db.Project" required="true"/>
        <time name="startTime" title="Start time" required="true"/>
        <time name="endTime" title="End time" required="true"/>
        <many-to-one name="frequency" title="Frequency" ref="com.axelor.apps.timecard.db.Frequency" required="true"/>
        <decimal name="monthlyWage" title="Monthly wage (hours)" readonly="true"/>

        <finder-method name="findByEmployee" using="employee" all="true"/>
        <finder-method name="findByProject" using="project" all="true"/>
        <finder-method name="findByEmployeeAndProject" using="employee,project" all="true"/>

    </entity>

</domain-models>
