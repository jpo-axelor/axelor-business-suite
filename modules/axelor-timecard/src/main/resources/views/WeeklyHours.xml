<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <grid name="weekly-hours-grid" title="Weekly hours" model="com.axelor.apps.timecard.db.WeeklyHours" orderBy="startDate">
        <field name="startDate"/>
        <field name="endDate"/>
        <field name="contractualHours"/>
        <field name="absenceHours"/>
        <field name="supplementaryHours"/>
    </grid>

    <form name="weekly-hours-form" title="Weekly hours" model="com.axelor.apps.timecard.db.WeeklyHours">
        <panel>
            <field name="startDate"/>
            <field name="endDate"/>

            <field name="contractualHours" colSpan="4"/>
            <field name="absenceHours" colSpan="4"/>
            <field name="supplementaryHours" colSpan="4"/>
        </panel>
    </form>

</object-views>
