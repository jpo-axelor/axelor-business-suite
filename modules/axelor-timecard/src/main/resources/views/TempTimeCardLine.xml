<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <form name="temp-time-card-line-form" title="Ligne de pointage" model="com.axelor.apps.timecard.db.TempTimeCardLine">
        <panel>
            <field name="project"/>
            <field name="employee"/>
            <field name="startDateTime"/>
            <field name="endDateTime"/>
        </panel>
    </form>

    <calendar name="temp-time-card-line-calendar-by-project" title="Pointage" model="com.axelor.apps.timecard.db.TempTimeCardLine"
              eventStart="startDateTime" eventStop="endDateTime" colorBy="project" editable="false">
        <field name="project"/>
        <field name="employee"/>
    </calendar>

    <calendar name="temp-time-card-line-calendar-by-employee" title="Pointage" model="com.axelor.apps.timecard.db.TempTimeCardLine"
              eventStart="startDateTime" eventStop="endDateTime" colorBy="employee" editable="false">
        <field name="employee"/>
        <field name="project"/>
    </calendar>

</object-views>
