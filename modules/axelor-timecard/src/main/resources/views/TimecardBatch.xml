<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <grid name="timecard-batch-grid" title="Timecard monthly hours batchs" model="com.axelor.apps.timecard.db.TimecardBatch">
		<field name="company" form-view="company-form" grid-view="company-grid"/>
    	<field name="code" x-bind="{{code|unaccent|uppercase}}" />
		<field name="createdOn"/>
		<field name="createdBy" form-view="user-form" grid-view="user-grid"/>
    </grid>
 
	<form name="timecard-batch-form" title="Timecard monthly hours batch" model="com.axelor.apps.timecard.db.TimecardBatch" onNew="action-timecard-batch-record-on-new">
		<panel name="main" >
			<field name="template" canEdit="false" widget="SuggestBox" form-view="template-form" gird-view="grid-form"/>
			<field name="company" canEdit="false" widget="SuggestBox" form-view="company-form" grid-view="company-grid"/>
			<field name="code" x-bind="{{code|unaccent|uppercase}}" onChange="action-base-batch-condition-check-unique-code"/>
			<field name="archived" title="Archived"/>
		</panel>
		
		<panel name="information" title="Information"  >
			<field name="createdOn" title="Created on"/>
			<field name="createdBy" title="Created by" form-view="user-form" grid-view="user-grid"/>
			<field name="description" showTitle="false"  />
	      	<panel-related field="batchList" colSpan="12" form-view="batch-form" grid-view="batch-grid" readonly="true"/>
		</panel>
		
		<panel name="actions" sidebar="true" title="Actions">
		    <button name="MonthlyHoursBatch" title="Check Monthly Hours Batch" onClick="save,action-timecard-batch-method-monthly-hours" colSpan="12"/>
		</panel>
	</form>
	
    
    <!-- ACTION RECORD -->
    <action-record name="action-timecard-batch-record-on-new" model="com.axelor.apps.timecard.db.TimecardBatch">
		<field name="createdOn" expr="eval: __config__.app.getTodayDate()"/>
		<field name="createdBy" expr="eval:__user__"/>
		<field name="company"  expr="eval:__user__.activeCompany" if="__user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__(Company).all().fetchOne()" if="__user__.activeCompany == null &amp;&amp; __repo__(Company).all().fetch().size == 1"/>
	</action-record>
	
    
    <!-- ACTION METHOD -->
	<action-method name="action-timecard-batch-method-monthly-hours">
		<call class="com.axelor.apps.timecard.web.TimecardBatchController" method="actionCheckMonthlyHours"/>
	</action-method>

</object-views>