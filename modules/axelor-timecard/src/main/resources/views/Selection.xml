<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <selection name="frequency.timecard.frequency.type.select">
        <option value="monthDays">Jours du mois</option>
        <option value="everyNWeeks">Toutes les N semaines</option>
    </selection>

    <selection name="timecard.timecard.status.select">
        <option value="1">Brouillon</option>
        <option value="2">En attente de validation</option>
        <option value="3">Validé</option>
        <option value="4">Refusé</option>
        <option value="5">Annulé</option>
    </selection>

    <selection name="timecardline.timecard.week.day.select">
        <option value="1">Lundi</option>
        <option value="2">Mardi</option>
        <option value="3">Mercredi</option>
        <option value="4">Jeudi</option>
        <option value="5">Vendredi</option>
        <option value="6">Samedi</option>
        <option value="7">Dimanche</option>
    </selection>

    <selection name="timecardline.timecard.type.select">
        <option value="contractual">Contractuelle</option>
        <option value="extra">En plus</option>
        <option value="absence">Absence</option>
    </selection>

    <selection name="ihr.batch.action.select" id="timecard.ihr.batch.action.select">
        <option value="6">Génération des pointages</option>
    </selection>

</object-views>
