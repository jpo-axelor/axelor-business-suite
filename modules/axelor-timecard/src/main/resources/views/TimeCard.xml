<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <grid name="time-card-grid" title="Pointages" model="com.axelor.apps.timecard.db.TimeCard">
        <field name="statusSelect"/>
        <field name="company"/>
        <field name="employee"/>
        <field name="fromDate"/>
        <field name="toDate"/>
    </grid>

    <form name="time-card-form" title="Pointage" model="com.axelor.apps.timecard.db.TimeCard" width="large">
        <menubar>
            <menu title="Outils" icon="fa-wrench">
                <item title="Générer les lignes de remplacements" action="save,action-time-card-view-open-substitution-wizard" readonlyIf="!id"/>
                <item title="Générer les lignes de pointage" action="save,action-time-card-method-generate-time-card-lines"/>
                <item title="Voir calendrier" action="save,action-time-card-view-show-calendar"/>
            </menu>
        </menubar>

        <panel>
            <field name="statusSelect" widget="NavSelect" showTitle="false"/>
        </panel>

        <panel>
            <field name="company" grid-view="company-grid" form-view="company-form"/>
            <field name="employee" grid-view="employee-grid" form-view="employee-form"/>
            <field name="fromDate"/>
            <field name="toDate"/>
        </panel>

        <panel>
            <button name="computeHours" title="Calculer les heures" onClick="save,action-time-card-method-compute-hours"/>
            <spacer/>
            <field name="complementaryHours" colSpan="3"/>
            <field name="complementOfHours" colSpan="3"/>
            <field name="supplementaryHours" colSpan="3"/>
            <field name="nightHours" colSpan="3"/>
        </panel>

        <panel-related field="timeCardLineList" grid-view="time-card-line-grid" form-view="time-card-line-form"/>

        <panel>
            <field name="validatedBy"/>
            <field name="validationDate"/>
            <field name="refusedBy"/>
            <field name="refusalDate"/>
            <field name="groundForRefusal"/>
        </panel>

        <panel-mail>
            <mail-messages limit="4"/>
        </panel-mail>
    </form>

    <action-method name="action-time-card-method-generate-time-card-lines">
        <call class="com.axelor.apps.timecard.web.TimeCardController" method="generateTimeCardLines"/>
    </action-method>

    <action-method name="action-time-card-method-compute-hours">
        <call class="com.axelor.apps.timecard.web.TimeCardController" method="computeHours"/>
    </action-method>

    <action-view name="action-time-card-view-show-calendar" title="Pointage - ${employee.name}" model="com.axelor.apps.timecard.db.TimeCardLine">
        <view type="calendar" name="time-card-line-calendar"/>
        <domain>self.timeCard.id = :_id</domain>
        <context name="calendarDate" expr="eval: timeCardLineList.sort{ it.date }[0]?.getDate()"/>
        <context name="_projectId" expr="eval: project?.id"/>
        <context name="_employeeId" expr="eval: employee?.id"/>
    </action-view>

    <action-view name="action-time-card-view-open-substitution-wizard" title="Assistant remplacements" model="com.axelor.apps.base.db.Wizard">
        <view type="form" name="time-card-line-substitution-wizard-form"/>
        <view-param name="popup" value="reload"/>
        <view-param name="popup-save" value="false"/>
        <view-param name="show-toolbar" value="false"/>
        <context name="_timeCardId" expr="eval: __self__.id"/>
    </action-view>

</object-views>
